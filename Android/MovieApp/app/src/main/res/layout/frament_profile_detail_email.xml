<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_back_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_mail_outline_24"/>

            <EditText
                android:id="@+id/profile_detail_email_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ví dụ: ten_email@example.com"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_detail_email_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/round_back_btn_comfirm"/>
    </LinearLayout>
</FrameLayout>