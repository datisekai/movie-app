<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_back_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_key_24"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/profile_detail_password_editText_oldpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu cũ"
                    android:textColor="@color/white"
                    android:layout_marginVertical="8dp"/>
                <EditText
                    android:id="@+id/profile_detail_password_editText_newpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu mới"
                    android:textColor="@color/white"
                    android:layout_marginVertical="8dp"/>
                <EditText
                    android:id="@+id/profile_detail_password_editText_renewpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lại mật khẩu"
                    android:textColor="@color/white"
                    android:layout_marginVertical="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_detail_password_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/round_back_btn_comfirm"/>
    </LinearLayout>
</FrameLayout>